{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Adena Mail{% endblock %}</title>

    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
</head>

<body>
<div class="container">
    <div id="header" class="jumbotron">
        <h1>Adena Mailing Tool</h1>
    </div>

    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Mailing Tools</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('adena_mail_datasource_list') }}">Datasources</a></li>
                <li><a href="{{ path('adena_mail_email_list') }}">Email</a></li>
                <li><a href="{{ path('adena_mail_mailing_list_list') }}">Mailing List</a></li>
                <li><a href="{{ path('adena_mail_sender_list') }}">Senders</a></li>
            </ul>
        </div>
        <div id="content" class="col-md-9">
            {% for type, messages in app.session.flashbag.all %}
                {%  for message in messages %}
                    <div class="alert alert-{{ type }}">
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}
            {% endblock %}
        </div>
    </div>

    <hr>

    <footer>
        <p>The sky's the limit © {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>
