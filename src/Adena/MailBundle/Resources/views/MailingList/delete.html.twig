{% extends 'AdenaMailBundle::layout.html.twig' %}

{% block adenamail_body %}
    {%  include('AdenaMailBundle:Common/Button:back_link_button.html.twig') with {'label': 'Back to list', 'path': path('adena_mail_mailing_list_list')} %}

    <h2>Delete a Mailing List</h2>

    <p>
        Are you sure you want to delete the Mailing List "{{ mailingList.name }}" ?
    </p>

    {# Keep the ID in the action #}
    <form action="{{ path('adena_mail_mailing_list_delete', {'id': mailingList.id}) }}" method="post">
        {%  include('AdenaMailBundle:Form/Button:delete_button.html.twig') %}
        {# Generates our form (only CSFR) #}
        {{ form_rest(form) }}
    </form>
{% endblock %}

