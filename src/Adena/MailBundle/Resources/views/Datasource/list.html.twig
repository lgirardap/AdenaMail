{% extends 'AdenaMailBundle::layout.html.twig' %}

{% block adenamail_body %}
    <div class="row">
        <div class="col-xs-12">
            {% include('AdenaMailBundle:Common/Button:create_link_button.html.twig') with {'label' : 'Add a new datasource', 'path' : path('adena_mail_datasource_add') } %}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Database Name
                    </th>
                    <th>
                        Host
                    </th>
                    <th>
                        Port
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for datasource in datasources %}
                    <tr>
                        <td>
                            {{ datasource.name }}
                        </td>
                        <td>
                            {{ datasource.databaseName }}
                        </td>
                        <td>
                            {{ datasource.host }}
                        </td>
                        <td>
                            {{ datasource.port }}
                        </td>
                        <td>
                            {{ datasource.username }}
                        </td>
                        <td>
                            <a href="{{ path('adena_mail_datasource_edit', {'id': datasource.id}) }}">
                                Edit
                            </a> |
                            <a href="{{ path('adena_mail_datasource_delete', {'id': datasource.id}) }}">
                                Delete
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

