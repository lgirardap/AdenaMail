{% extends 'AdenaMailBundle::layout.html.twig' %}

{% block adenamail_body %}
    {%  include('AdenaMailBundle:Common/Button:back_link_button.html.twig') with {'label': 'Back to list', 'path': path('adena_mail_datasource_list')} %}

    <h2>Delete a Sender</h2>

    <p>
        Are you sure you want to delete this datasource "{{ datasource.name }}" ?
    </p>

    {# Keep the ID in the action #}
    <form action="{{ path('adena_mail_datasource_delete', {'id': datasource.id}) }}" method="post" class="nojsvalidate">
        {%  include('AdenaMailBundle:Form/Button:delete_button.html.twig') %}
        {# Generates our form (only CSFR) #}
        {{ form_rest(form) }}
    </form>
{% endblock %}

