{% extends 'AdenaMailBundle::layout.html.twig' %}

{% block adenamail_body %}
    <a href="{{ path('adena_mail_sender_add') }}" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i>
        Add a new sender
    </a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Active
            </th>
            <th>
                Action
            </th>
        </tr>
        </thead>
        <tbody>
            {% for sender in senders %}
            <tr>
                <td>
                    {{ sender.id }}
                </td>
                <td>
                    {{ sender.name }}
                </td>
                <td>
                    {{ sender.email }}
                </td>
                <td>
                    {{ sender.active }}
                </td>
                <td>
                    <a href="{{ path('adena_mail_sender_edit', {'id': sender.id}) }}">
                        Edit
                    </a> |
                    <a href="{{ path('adena_mail_sender_delete', {'id': sender.id}) }}">
                        Delete
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

