{% extends 'AdenaMailBundle::layout.html.twig' %}

{% block adenamail_body %}

    <div class="row">
        <div class="col-xs-12">
            {% include('AdenaMailBundle:Common/Button:create_link_button.html.twig') with {'label' : 'Add a new sender', 'path' : path('adena_mail_sender_add') } %}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Active
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for sender in senders %}
                    <tr>
                        <td>
                            {{ sender.id }}
                        </td>
                        <td>
                            {{ sender.name }}
                        </td>
                        <td>
                            {{ sender.email }}
                        </td>
                        <td>
                            {{ sender.active }}
                        </td>
                        <td>
                            <a href="{{ path('adena_mail_sender_edit', {'id': sender.id}) }}">
                                Edit
                            </a> |
                            <a href="{{ path('adena_mail_sender_delete', {'id': sender.id}) }}">
                                Delete
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

